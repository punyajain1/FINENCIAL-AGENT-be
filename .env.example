# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/trading_agent_db?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Keys

# Google Gemini AI - REQUIRED
# Get your API key from: https://makersuite.google.com/app/apikey
# Or: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# HuggingFace - REQUIRED for Sentiment Analysis
# Get your API key from: https://huggingface.co/settings/tokens
# Free tier available - Sign up at: https://huggingface.co/join
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# News API - REQUIRED (Choose ONE)
# Option 1: NewsAPI.org - 100 requests/day free
# Get your API key from: https://newsapi.org/register
NEWS_API_KEY=your_newsapi_key_here

# Option 2: GNews API - OPTIONAL (Alternative to NewsAPI)
# 100 requests/day free
# Get your API key from: https://gnews.io/register
GNEWS_API_KEY=your_gnews_api_key_here

# Option 3: Currents API - OPTIONAL (Alternative news source)
# Get your API key from: https://currentsapi.services/en/register
CURRENTS_API_KEY=your_currents_api_key_here

# CoinGecko API - OPTIONAL (No API key required for free tier!)
# Free tier: 10-50 calls/minute
# For higher limits, get API key from: https://www.coingecko.com/en/api/pricing
# Leave empty to use free tier without authentication
COINGECKO_API_KEY=

# Gold API - REQUIRED for Gold/Silver prices
# Get your API key from: https://www.goldapi.io/dashboard
GOLD_API_KEY=your_gold_api_key_here

# Caching Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
